{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"version": "2.1.1",

	"type": "object",

	"definitions": {
		"classTableGroup": {
			"properties": {
				"title": {
					"type": "string"
				},
				"subclasses": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"source": {
								"type": "string"
							}
						},
						"required": ["name", "source"],
						"additionalProperties": false
					}
				},
				"colLabels": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"rows": {
					"type": "array",
					"items": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				}
			},
			"required": [
				"colLabels",
				"rows"
			],
			"additionalProperties": false
		},

		"classFeature": {
			"properties": {
				"name": {"type": "string"},
				"source": {"type": "string"},
				"srd": {"type": "boolean"},
				"className":  {"type": "string"},
				"classSource": {"type": "string"},
				"level":  {"type": "integer"},
				"header":  {"type": "integer"},
				"page": {"type": "integer"},
				"type": {"type": "string", "enum": ["inset"]},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"isClassFeatureVariant": {"type": "boolean"},
				"otherSources": {
					"$ref": "util.json#/definitions/otherSources"
				}
			},
			"required": [
				"name",
				"source",
				"className",
				"classSource",
				"level",
				"entries"
			],
			"additionalProperties": false
		},
		"subclassFeature": {
			"type": "object",
			"properties": {
				"name": {"type": "string"},
				"source": {"type": "string"},
				"srd": {"type": "boolean"},
				"className":  {"type": "string"},
				"classSource": {"type": "string"},
				"subclassShortName":  {"type": "string"},
				"subclassSource": {"type": "string"},
				"level":  {"type": "integer"},
				"header":  {"type": "integer"},
				"page": {"type": "integer"},
				"type": {"type": "string", "enum": ["inset"]},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"isClassFeatureVariant": {"type": "boolean"},
				"otherSources": {
					"$ref": "util.json#/definitions/otherSources"
				}
			},
			"required": [
				"name",
				"source",
				"className",
				"classSource",
				"subclassShortName",
				"subclassSource",
				"level",
				"entries"
			],
			"additionalProperties": false
		},

		"proficiencies": {
			"type": "object",
			"properties": {
				"armor": {
					"type": "array",
					"items": {
						"oneOf": [
							{
								"type": "string",
								"enum": [
									"light", "medium", "heavy", "shields"
								]
							},
							{
								"type": "object",
								"properties": {
									"proficiency": {
										"type": "string",
										"enum": [
											"light", "medium", "heavy", "shields", "special"
										]
									},
									"full": {
										"description": "The complete text for this proficiency.",
										"type": "string"
									}
								},
								"required": ["proficiency", "full"]
							}
						]
					}
				},
				"weapons": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"tools": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"skills": {
					"$ref": "util.json#/definitions/skillProficiencies"
				}
			}
		},

		"subclass": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"shortName": {
					"type": "string"
				},
				"isReprinted": {
					"type": "boolean"
				},
				"srd": {
					"type": "boolean"
				},
				"page": {
					"type": "integer"
				},
				"casterProgression": {
					"enum": ["full", "1/2", "1/3", "pact"]
				},
				"spellcastingAbility": {
					"enum": ["str", "dex", "con", "int", "wis", "cha"]
				},
				"subclassFeatures": {
					"type": "array",
					"items": {
						"oneOf": [
							{
								"type": "string"
							},
							{
								"type": "object",
								"properties": {
									"subclassFeature": {
										"type": "string"
									},
									"gainSubclassFeature": {
										"type": "boolean"
									}
								},
								"required": ["subclassFeature"]
							}
						]
					}
				},
				"subclassTableGroups": {
					"type": "array",
					"items": { "$ref": "#/definitions/classTableGroup"}
				},
				"source": {
					"type": "string"
				},
				"otherSources": {
					"$ref": "util.json#/definitions/otherSources"
				},
				"additionalSpells": { "$ref": "util.json#/definitions/additionalSpellsArray" },
				"subclassSpells": {
					"description": "Homebrew use only",
					"type": "array",
					"items": {"$ref": "#/definitions/spellRef"}
				},
				"subSubclassSpells": {
					"description": "Homebrew use only",
					"type": "array",
					"items": {"$ref": "#/definitions/spellRef"}
				},
				"className": {
					"description": "The name of the class this subclass belongs to. Homebrew use only",
					"type": "string"
				},
				"classSource": {
					"description": "The source of the class this subclass belongs to (defaults to PHB). Homebrew use only",
					"type": "string"
				}
			},
			"required": [
				"name",
				"shortName",
				"subclassFeatures",
				"source"
			],
			"additionalProperties": false
		},

		"requirements": {
			"str": {
				"type": "integer"
			},
			"dex": {
				"type": "integer"
			},
			"con": {
				"type": "integer"
			},
			"int": {
				"type": "integer"
			},
			"wis": {
				"type": "integer"
			},
			"cha": {
				"type": "integer"
			},
			"or": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"str": {
							"type": "integer"
						},
						"dex": {
							"type": "integer"
						},
						"con": {
							"type": "integer"
						},
						"int": {
							"type": "integer"
						},
						"wis": {
							"type": "integer"
						},
						"cha": {
							"type": "integer"
						}
					},
					"additionalProperties": false
				}
			}

		},

		"class": {
			"description" : "A character class",

			"properties": {
				"name": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"otherSources": {
					"$ref": "util.json#/definitions/otherSources"
				},
				"srd": {
					"type": "boolean"
				},
				"isReprinted": {
					"type": "boolean"
				},
				"isSidekick": {
					"type": "boolean"
				},
				"hd": {
					"type": "object",
					"properties": {
						"number": {
							"type": "integer"
						},
						"faces": {
							"type": "integer"
						}
					},
					"required": [
						"number",
						"faces"
					],
					"additionalProperties": false
				},
				"proficiency": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": ["str", "dex", "con", "int", "wis", "cha"]
					}
				},
				"classTableGroups": {
					"type": "array",
					"items": { "$ref": "#/definitions/classTableGroup"}
				},
				"startingProficiencies": {
					"$ref": "#/definitions/proficiencies"
				},
				"startingEquipment": {
					"type": "object",
					"properties": {
						"additionalFromBackground": {
							"type": "boolean"
						},
						"default": {
							"type": "array",
							"items": {
								"type": "string"
							}
						},
						"defaultData": {
							"$ref": "util.json#/definitions/startingEquipment"
						},
						"goldAlternative": {
							"type": "string"
						}
					},
					"required": [
						"additionalFromBackground",
						"default"
					],
					"additionalProperties": false
				},
				"requirements": {"$ref": "#/definitions/requirements"},
				"multiclassing": {
					"type": "object",
					"properties": {
						"requirements": {"$ref": "#/definitions/requirements"},
						"proficienciesGained": {
							"$ref": "#/definitions/proficiencies"
						},
						"entries": {
							"type": "array",
							"items": {"$ref": "entry.json"}
						}
					},
					"additionalProperties": false
				},
				"casterProgression": {
					"enum": ["full", "1/2", "1/3", "pact"]
				},
				"spellcastingAbility": {
					"enum": ["str", "dex", "con", "int", "wis", "cha"]
				},
				"classFeatures": {
					"type": "array",
					"items": {
						"oneOf": [
							{
								"type": "string"
							},
							{
								"type": "object",
								"properties": {
									"classFeature": {
										"type": "string"
									},
									"gainSubclassFeature": {
										"type": "boolean"
									}
								},
								"required": ["classFeature"]
							}
						]
					}
				},
				"subclassTitle": {
					"type": "string"
				},
				"subclasses": {
					"type": "array",
					"items": {"$ref": "#/definitions/subclass"}
				},
				"page": {
					"type": "integer"
				},
				"fluff": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"entries": {
								"type": "array",
								"items": {"$ref": "entry.json"}
							},
							"page": {
								"type": "integer"
							},
							"source": {
								"type": "string"
							},
							"type": {
								"type": "string"
							}
						},
						"required": ["entries", "source"],
						"additionalProperties": false
					}
				},
				"classSpells": {
					"description": "Homebrew use only",
					"type": "array",
					"items": {"$ref": "#/definitions/spellRef"}
				}
			},
			"required": [
				"name",
				"source",
				"classFeatures"
			],
			"additionalProperties": false
		},

		"spellRef": {
			"description": "A reference to a spell, linked by name and source. Assumes PHB as the source, if none is provided.",
			"oneOf": [
				{
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"source": {
							"type": "string"
						}
					},
					"required": [
						"name", "source"
					]
				},
				{
					"type": "string"
				}
			]
		}
	},

	"properties": {
		"class": {
			"type": "array",
			"items": {"$ref": "#/definitions/class"}
		},

		"classFeature": {
			"type": "array",
			"items": {"$ref": "#/definitions/classFeature"}
		},

		"subclassFeature": {
			"type": "array",
			"items": {"$ref": "#/definitions/subclassFeature"}
		}
	},
	"required": ["class", "classFeature"],
	"additionalProperties": false
}
